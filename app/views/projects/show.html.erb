<div class="row">
  <div class="project_show_block col-sm-7">
    <h2><%= @project.title %></h2>
    <div class="display_newlines">
      <%= @project.blurb %>
    </div>
    <div class="display_newlines">
      <%= @project.description %>
    </div>
    <div>
      <h4>Total: <%= number_to_currency @project.cost %></h4>
    </div>
  </div>

  <div class="project_progress_block">
    <h4><%= @percent_header_text %> to a Better Future!</h4>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= @percentage %>%;">
          &nbsp;<%= number_to_percentage(@percentage, {precision: 0}) %>
      </div>
    </div>
  </div>
  <div class="donation_levels_block col-sm-4">
    <h2>Donation Levels</h2>
    <% if signed_in? %>
      <div class="box">
        <h4>Need Donation Levels?</h4>
        <% if current_user.allowed_to_modify?(@project) %>
          <%= link_to "Add a donation level", new_project_level_path(@project), class: "btn btn-primary pull-right" %>
        <% end %>
      </div>
    <% end %>

    <div>
      <% @levels.each do |level| %>
        <div class="box">
          <div>
            <h4><%= level.title %> - 
            <%= number_to_currency level.amount %></h4>
          </div>
          <div>
            <%= level.description %>
          </div>
          <div>
            <%= number_to_currency level.amount %>
          </div>
          <% if signed_in? %>
            <%= bootstrap_form_for [level, @donation] do |form| %>
              <span id="submit_level_<%= level.id %>">
                <%= form.submit "Donate", method: :create, class: "btn btn-primary donate pull-right" %>
              </span>
            <% end %>
          <% else %>
            <button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal" data-level="<%= level.id %>">Sign in to Donate</button>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <%= render "modal_button.html" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
