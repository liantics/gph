<h2><%= @project.title %></h2>
<%= @test_data %>
<%= @text %>
<div>
  <%= @project.blurb %>
</div>
<div>
  <%= @project.description %>
</div>
<div>
  Total $<%= @project.cost %>
</div>

<h2>Donation Levels</h2>
<div>
  <% @levels.each do |level| %>
    <div>
      <h3><%= level.title %></h3>
    </div>
    <div>
      <%= level.description %>
    </div>
    <div>
      <%= number_to_currency level.amount %>
    </div>
    <%= form_for [level, @donation] do |form| %>
      <%= form.submit "Donate", method: :create %>
    <% end %>
  <% end %>
</div>

<% if signed_in? %>
  <% if current_user.allowed_to_modify?(@project) %>
    <%= link_to "Add a donation level", new_project_level_path(@project) %>
  <% end %>
<% end %>
