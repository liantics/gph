<%= render "error_messages", target: @level %>
<div class="pretty_form">
  <h2>Add a Project Level</h2>
  <%= bootstrap_form_for [@project, @level] do |form| %>
    <div>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.text_area :description %>
    </div>
    <div>
      <%= form.text_field :amount, prepend: "$" %>
    </div>
    <div class="pull-right">
      <%= form.submit %>
    </div>
  <% end %>
</div>
