<h3>Already a Site Member?</h3>
<%= link_to "Sign In", new_session_path, class: "btn btn-primary" %>

<h3>Create an Account</h3>
<% if @user.errors.any? %>
  <%= render "error_messages", target: @user %>
<% end %>

<div class="pretty_form">
  <%= bootstrap_form_for @user do |form| %>
    <div>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.text_field :name %>
    </div>
    <% if ! current_user %>
      <div>
        <%= form.password_field :password %>
      </div>
    <% end %>
    <div class="pull-right">
      <%= form.submit %>
    </div>
  <% end %>
</div>
