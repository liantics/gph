<% if @user.errors.any? %>
  <%= render "error_messages", target: @user %>
<% end %>

<div class="pretty_form">
  <%= bootstrap_form_for @user, :html => { multipart: true } do |form| %>
    <div>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.text_field :name %>
    </div>
    <% if ! current_user %>
      <div>
        <%= form.password_field :password %>
      </div>
    <% end %>
    <% if signed_in? %>
      <%= form.file_field :image %>
    <% end %>
    <div class="pull-right">
      <%= form.submit %>
    </div>
  <% end %>
</div>

