<% if signed_in? %>
  <div class="jumbotron masthead">
    <h1>Welcome, Hero!</h1>
  </div>
  <div class="container">
    <div class="hero-unit">
      <div class="row clearfix">
        <div class="col_centered">
          <div class="col-md-7 show_block dashboard_show_your_projects">
            <%= render "your_projects" %>
          </div>
          <div class="col-md-offset-1 col-md-4 show_block dashboard_show_you_funded">
            <%= render "projects_you_funded" %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
<%else%>
  <div class="jumbotron masthead">
    <%= render "you_can_be_a_hero" %>
  </div>
  <div class="hero-unit">
    <%= render "how_it_works" %>
  </div>
<%end%>

<div class="container">
  <div class="hero-unit">
    <h1>Featured Projects</h1>
    <%= render "featured" %>
  </div>
  <%= render "layouts/carousel_featured" %>
  <div class="hero-unit">
    <h1>More Cool Projects</h1>
    <%= render "cool_projects" %>
  </div>
</div>
